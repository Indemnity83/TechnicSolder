{
    "name": "solder/solder",
    "description": "Supercharge Your Modpack with TechnicSolder.",
    "keywords": ["technic", "solder"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.4",
        "alsofronie/eloquent-uuid": "^1.0",
        "graham-campbell/exceptions": "^9.1",
        "laravel/framework": "5.3.*",
        "laravel/passport": "^1.0",
        "league/fractal": "^0.14.0",
        "myclabs/php-enum": "^1.5",
        "spatie/laravel-fractal": "^3.0",
        "spatie/laravel-sluggable": "^1.3",
        "tremby/laravel-git-version": "^1.1"
    },
    "require-dev": {
        "bheller/images-generator": "^1.0",
        "filp/whoops": "^2.1",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "0.9.*",
        "phpunit/phpunit": "~5.0",
        "symfony/css-selector": "3.1.*",
        "symfony/dom-crawler": "3.1.*"
    },
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests"
        ]
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "post-install-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postInstall",
            "php artisan optimize"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "php artisan optimize"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
